<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="window" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.geekbrains.cloud.client.AuthorizationController">

        <Label alignment="CENTER" contentDisplay="BOTTOM" text="АВТОРИЗАЦИЯ" textAlignment="CENTER" />
        <HBox>
            <Label text="Логин" HBox.hgrow="ALWAYS" />
            <TextField fx:id="loginField" promptText="введите логин" HBox.hgrow="ALWAYS" />
        </HBox>
        <HBox>
            <Label text="Пароль" HBox.hgrow="ALWAYS" />
            <PasswordField fx:id="passField" promptText="введите пароль" HBox.hgrow="ALWAYS" />
        </HBox>
        <HBox>
            <Button fx:id="btnLogin" onAction="#login" text="Войти" />
            <Hyperlink fx:id="btnRegistration" onAction="#registration" text="Регистрация" />
            <Button fx:id="btnExit" onAction="#exit" text="Выход" />
        </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>

</VBox>
